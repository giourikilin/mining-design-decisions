<MultiFileAnalysisFrame>:
    orientation: "vertical"
    plotting_window: plotting_window
    files_list: ""
    ScrollView:
        size_hint_y: .8
        do_scroll_y: True
        do_scroll_x: False
        BoxLayout:
            id: plotting_window
            size_hint_y: 1
            orientation: "horizontal"
    BoxLayout:
        size_hint_y: .2
        orientation: "horizontal"
        BoxLayout:
            orientation: "vertical"
            size_hint_x: .25
            Button:
                text: "Select Files"
                on_press: root.select_files()
            Button:
                text: "Glob Select"
                on_press: root.glob_select()
            Button:
                text: "Clear Files"
                on_press: root.clear_files()
        BoxLayout:
            orientation: "vertical"
            size_hint_x: .25
            Label:
                size_hint_y: .25
                text: "Selected Files"
            TextInput:
                size_hint_y: .75
                multiline: True
                readonly: True
                text: root.files_list
        BoxLayout:
            orientation: "vertical"
            size_hint_x: .25
            ToggleButton:
                text: "Use Trim"
                on_press: root.set_trimming(self.state)
            BoxLayout:
                orientation: "horizontal"
                Label:
                    size_hint_x: .25
                    text: "Patience"
                TextInput:
                    size_hint_x: .75
                    multiline: False
                    on_text: root.enter_patience(self.text)
                    input_filter: "int"
            BoxLayout:
                orientation: "horizontal"
                Label:
                    size_hint_x: .25
                    text: "Min-Index"
                TextInput:
                    size_hint_x: .75
                    multiline: False
                    on_text: root.enter_min_index(self.text)
                    input_filter: "int"
        BoxLayout:
            orientation: "vertical"
            size_hint_x: .25
            Label:
                size_hint_y: .25
                text: "Attributes"
            TextInput:
                size_hint_y: .5
                multiline: True
                on_text: root.enter_attributes(self.text)
            Button:
                size_hint_y: .25
                text: "Plot"
                on_press: root.create_plot()


