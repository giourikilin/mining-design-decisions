<ManagerWindow>:
    content_frame: content_frame
    orientation: "vertical"
    BoxLayout:
        size_hint_y: .15
        orientation: "horizontal"
        Button:
            size_hint_x: 1/3
            text: "Benchmark"
            on_press: root.goto_benchmark()
        Button:
            size_hint_x: 1/3
            text: "Single File Analysis"
            on_press: root.goto_single_file_analysis()
        Button:
            size_hint_x: 1/3
            text: "Multi-File Analysis"
            on_press: root.goto_multi_file_analysis()
    BoxLayout:
        id: content_frame
        size_hint_y: 0.85
        orientation: "horizontal"